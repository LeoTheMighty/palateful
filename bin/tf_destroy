#!/bin/bash
# Destroy terraform-managed infrastructure for development environment

set -e

root_path=$(cd "$(dirname "$0")/.." && pwd -P)
cd "${root_path}/terraform"

# Check if terraform is initialized
if [ ! -d ".terraform" ]; then
    echo "Terraform not initialized. Running tf_init..."
    "${root_path}/bin/tf_init"
fi

echo "Destroying Terraform-managed infrastructure for development..."
terraform destroy -var-file=development.tfvars "$@"
