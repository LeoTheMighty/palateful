# Palateful Evaluation Suite Environment Configuration
# Copy this to .env.eval and configure for your environment

# OpenAI API Key (required for AI extraction evaluation)
OPENAI_API_KEY=sk-your-key-here

# Database URL (required for ingredient matching evaluation)
# Start with: docker compose up -d
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/palateful

# Evaluation modes
EVAL_OCR_MODE=local        # local | batch | mock
EVAL_MOCK_AI=false         # Skip real AI calls, use cached responses
EVAL_CACHE_RESPONSES=true  # Cache AI/OCR responses for future mock runs
EVAL_PARALLEL_WORKERS=4    # Number of parallel evaluation workers

# Paths
EVAL_OUTPUT_DIR=./results
EVAL_DATASET_DIR=./datasets

# Verbosity
EVAL_VERBOSE=false
